<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".bottomNavFragments.workout.workoutOngoing.WorkoutOngoing">

    <ProgressBar
        android:id="@+id/workoutOnGoing_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:progressTint="@color/purple_500"
        android:layout_marginBottom="50dp"
        android:indeterminate="false"
        android:max="100"
        tools:ignore="UnusedAttribute"
        tools:progress="20" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/workoutOnGoing_kilometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="36sp"
        tools:text="0.00 km" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/workoutOnGoing_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="36sp"
        tools:text="00:00:00:00" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/workoutOnGoing_startOrPause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="@string/workout_startWorkout"
        android:textSize="16sp"
        app:cornerRadius="10dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/workoutOnGoing_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="@string/workout_stopRun"
        android:textSize="16sp"
        android:visibility="gone"
        app:cornerRadius="10dp" />

</LinearLayout>